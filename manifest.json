{
  "manifest_version": 3,
  "name": "HH Visited Highlighter",
  "version": "1.0",
  "description": "Подсветка посещённых резюме и вакансий на hh.ru красным цветом.",
  "permissions": ["storage"],
  "host_permissions": ["https://*.hh.ru/*"],
  "icons": {
    "16": "icon_styled_16.png",
    "48": "icon_styled_48.png",
    "128": "icon_styled_128.png"
  },
  "author": "Sergey (apofeouz)",
  "homepage_url": "https://github.com/apofeouz/hh-visited-highlighter",
  "content_scripts": [
    {
      "matches": ["https://*.hh.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
