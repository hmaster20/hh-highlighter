{
  "manifest_version": 3,
  "name": "HH Visited Highlighter",
  "version": "1.2",
  "description": "Подсветка посещённых резюме и вакансий на hh.ru с настройками цвета и стилей.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*.hh.ru/*"],
  "icons": {
    "16": "icons/icon_styled_16.png",
    "48": "icons/icon_styled_48.png",
    "128": "icons/icon_styled_128.png"
  },
  "author": "hmaster20 | The development idea was taken from https://github.com/apofeouz",
  "homepage_url": "https://github.com/hmaster20/hh-highlighter",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_styled_16.png",
      "48": "icons/icon_styled_48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.hh.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}